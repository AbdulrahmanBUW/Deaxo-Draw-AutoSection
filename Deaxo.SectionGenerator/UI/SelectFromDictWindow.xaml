<Window x:Class="Deaxo.SectionGenerator.UI.SelectFromDictWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Section Generator v1.0.0 - DEAXO GmbH"
        Height="650" Width="750"
        WindowStartupLocation="CenterScreen"
        Background="#F9F9F9"
        FontFamily="Segoe UI"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Drop Shadow Effect -->
        <DropShadowEffect x:Key="DropShadow" BlurRadius="8" Direction="270" ShadowDepth="2" Opacity="0.15"/>

        <!-- Rounded Button Style -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="8,4"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E5F0FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005BBB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Rounded CheckBox Item Style -->
        <Style x:Key="CheckBoxItemStyle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Border x:Name="border"
                                Background="White"
                                CornerRadius="12"
                                Padding="8"
                                Margin="4"
                                SnapsToDevicePixels="True"
                                Effect="{StaticResource DropShadow}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E5F0FF"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#007AFF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Layout -->
    <Border CornerRadius="20" Background="White" BorderBrush="#DDDDDD" BorderThickness="1" Padding="25">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Instructions + select/deselect buttons -->
                <RowDefinition Height="*"/>
                <!-- List -->
                <RowDefinition Height="Auto"/>
                <!-- OK/Cancel buttons -->
            </Grid.RowDefinitions>

            <!-- Instructions + Select All / Deselect All -->
            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="Select the categories you want to generate sections for:" 
                           FontSize="16" FontWeight="SemiBold" Foreground="#444" Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,5">
                    <Button Content="Select All" Width="100" Height="30" Margin="0,0,10,0"
                            Background="#007AFF" Foreground="White" FontWeight="Bold"
                            Style="{StaticResource RoundedButtonStyle}" Click="SelectAll_Click"/>
                    <Button Content="Deselect All" Width="120" Height="30"
                            Background="#EEE" Foreground="#555"
                            Style="{StaticResource RoundedButtonStyle}" Click="DeselectAll_Click"/>
                </StackPanel>
            </StackPanel>

            <!-- List of Categories -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ListBox x:Name="OptionsList" BorderThickness="0" Background="Transparent">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding}" Style="{StaticResource CheckBoxItemStyle}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="Cancel" Width="100" Height="40" Margin="0,0,10,0"
                        Background="#EEE" Foreground="#555"
                        Style="{StaticResource RoundedButtonStyle}"
                        Click="Cancel_Click"/>
                <Button Content="OK" Width="120" Height="40"
                        Background="#007AFF" Foreground="White"
                        FontWeight="Bold"
                        Style="{StaticResource RoundedButtonStyle}"
                        Click="Ok_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>